@page "/services/create"
@using Microsoft.EntityFrameworkCore
@using SpaFinal213.Components.Shared
@using SpaFinal213.Models
@inject IDbContextFactory<SpaFinal213.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<div class="centered-panel">
    <div class="panel-inner">
        <div class="panel-card" style="flex: 1 1 520px;">
            <h1>Create</h1>

            <section>
                <StatusMessage Message="@ErrorMessage" />
                <EditForm Model="Service" method="post" OnValidSubmit="AddService" FormName="create" Enhance>
                    <DataAnnotationsValidator />
                    <h2>Service</h2>
                    <hr />
                    <ValidationSummary class="text-danger" role="alert" />

                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <InputText id="name" @bind-Value="Service.Name" class="form-control" />
                        <ValidationMessage For="() => Service.Name" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <InputText id="description" @bind-Value="Service.Description" class="form-control" />
                        <ValidationMessage For="() => Service.Description" class="text-danger" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="price" class="form-label">Price</label>
                            <InputNumber id="price" @bind-Value="Service.Price" class="form-control" />
                            <ValidationMessage For="() => Service.Price" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="duration" class="form-label">Duration (minutes)</label>
                            <InputNumber id="duration" @bind-Value="Service.Duration" class="form-control" />
                            <ValidationMessage For="() => Service.Duration" class="text-danger" />
                        </div>
                    </div>

                    <div class="mt-2">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
                    </div>
                </EditForm>
            </section>
        </div>

        <div class="panel-card" style="flex: 0 0 320px;">
            <section>
                <h3>Quick links & help</h3>
                <hr />
                <p>
                    <a class="btn btn-sm btn-secondary mb-2" href="/services">View Services</a>
                </p>
                <p>
                    <a class="btn btn-sm btn-secondary mb-2" href="/appointments/create">Create Appointment</a>
                </p>
                <p>
                    <a class="btn btn-sm btn-outline-secondary" href="/services">Back to List</a>
                </p>
            </section>
        </div>
    </div>
</div>

@code {
    private string? ErrorMessage;

    [SupplyParameterFromForm]
    private Service Service { get; set; } = default!;

    protected override void OnInitialized() => Service ??= new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddService()
    {
        ErrorMessage = null;

        try
        {
            using var context = DbFactory.CreateDbContext();
            context.Service.Add(Service);
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/services");
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while creating the service.";
            Console.Error.WriteLine(ex);
        }
    }
}
