@page "/services/delete"
@using Microsoft.EntityFrameworkCore
@using SpaFinal213.Components.Shared
@using SpaFinal213.Models
@inject IDbContextFactory<SpaFinal213.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<div class="centered-panel">
    <div class="panel-inner">
        <div class="panel-card" style="flex: 1 1 520px;">
            <h1>Delete</h1>

            <section>
                <StatusMessage Message="@ErrorMessage" />

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="text-danger">@ErrorMessage</div>
                }
                else if (service is null)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    <h2>Service</h2>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Name</dt>
                        <dd class="col-sm-10">@service.Name</dd>

                        <dt class="col-sm-2">Description</dt>
                        <dd class="col-sm-10">@service.Description</dd>

                        <dt class="col-sm-2">Price</dt>
                        <dd class="col-sm-10">@service.Price.ToString("C")</dd>

                        <dt class="col-sm-2">Duration</dt>
                        <dd class="col-sm-10">@service.Duration @("min")</dd>
                    </dl>

                    <EditForm Model="service" OnValidSubmit="DeleteService" FormName="delete" method="post" Enhance>
                        <div class="mb-2">
                            <button type="submit" class="w-100 btn btn-lg btn-danger" disabled="@(service is null)">Delete</button>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-outline-secondary" href="/services">Cancel</a>
                        </div>
                    </EditForm>
                }
            </section>
        </div>

        <div class="panel-card" style="flex: 0 0 320px;">
            <section>
                <h3>Quick links & help</h3>
                <hr />
                <p><a class="btn btn-sm btn-secondary mb-2" href="/services/create">Create Service</a></p>
                <p><a class="btn btn-sm btn-secondary mb-2" href="/services">View Services</a></p>
                <p><a class="btn btn-sm btn-outline-secondary" href="/services">Back to List</a></p>
            </section>
        </div>
    </div>
</div>

@code {
    private string? ErrorMessage;
    private Service? service;

    [SupplyParameterFromQuery]
    private int Service_Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ErrorMessage = null;

        try
        {
            using var context = DbFactory.CreateDbContext();
            service = await context.Service.FirstOrDefaultAsync(s => s.Service_Id == Service_Id);

            if (service is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while loading the service.";
            Console.Error.WriteLine(ex);
        }
    }

    private async Task DeleteService()
    {
        ErrorMessage = null;

        if (service is null)
        {
            ErrorMessage = "Service not found.";
            return;
        }

        try
        {
            using var context = DbFactory.CreateDbContext();
            context.Service.Remove(service);
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/services");
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while deleting the service.";
            Console.Error.WriteLine(ex);
        }
    }
}
