@page "/OldServices"
@rendermode InteractiveServer

<PageTitle>Services</PageTitle>

<!-- Flip-card layout scoped to this component. 3 columns x 2 rows on large screens. -->
<style>
    .services-page {
        color: #555;
        background: #222;
        text-align: center;
        font-family: "Roboto Mono", monospace;
        padding: 1em;
        margin: 25px;
    }

    .services-page * { box-sizing: border-box; font-weight: normal; }

    /* larger, more readable headings on cards */
    .services-page h1 { font-size: 2.1rem; color: #fff; margin: 0; }
    .services-page h2 { color: #fff; margin: 0 0 0.5rem 0; font-size: 1.15rem; }
    .services-page p { font-size: 1rem; line-height: 1.5; color: #e6e6e6; }
    .services-page h4 { color: #ddd; margin: 1rem 0 0.5rem; font-size: 1.25rem; }

    /* Grid layout: 3 columns on large, 2 on medium, 1 on small */
    .flip-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        justify-items: center;
        align-items: start;
        margin-top: 1rem;
    }

    .flip {
        position: relative;
        width: 100%;
        max-width: 380px; /* slightly wider cards for larger text */
        perspective: 1000px;
        margin-bottom: 0.5rem;
    }

    .flip > .front,
    .flip > .back {
        transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275);
        transition-duration: 0.5s;
        transition-property: transform, opacity;
        color: white;
        background-size: cover !important;
        background-position: center !important;
        height: 340px; /* increased height for a bigger textbox feel */
        padding: 1.5rem 1.25rem; /* increased padding */
        background: #313131;
        border-radius: 10px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.45);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        overflow: hidden;
    }

    /* make back content scrollable if it overflows */
    .flip > .back {
        position: absolute;
        opacity: 0;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transform: rotateY(-180deg);
        backface-visibility: hidden;
        padding: 1.5rem;
        box-sizing: border-box;
    }

    .back h2 { margin-bottom: 0.5rem; }
    .back p { margin: 0; }

    .flip:hover > .front { transform: rotateY(180deg); }
    .flip:hover > .back { opacity: 1; transform: rotateY(0deg); }

    /* vertical flip variant */
    .flip.flip-vertical > .back { transform: rotateX(-180deg); }
    .flip.flip-vertical:hover > .front { transform: rotateX(180deg); }
    .flip.flip-vertical:hover > .back { transform: rotateX(0deg); }

    .text-shadow {
        text-shadow:
            1px 1px rgba(0, 0, 0, 0.04),
            2px 2px rgba(0, 0, 0, 0.04),
            3px 3px rgba(0, 0, 0, 0.04),
            4px 4px rgba(0, 0, 0, 0.04);
    }

   
</style>

<div class="services-page" role="main" aria-labelledby="services-title">
