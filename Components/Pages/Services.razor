@page "/OldServices"
@rendermode InteractiveServer

<PageTitle>Services</PageTitle>

<!-- Fixed flip-card layout: scoped styles (no global body changes), corrected CSS, accessible markup -->
<style>

    /* Scope styles to this page to avoid global side-effects */
    .services-page { color: #555; background: #222; text-align: center; font-family: "Roboto Mono", monospace; padding: 1em; margin: 25px; font-size: 25px}

    /* normalize box sizing and base font weight within this component */
    .services-page * { box-sizing: border-box; font-weight: normal; }

    .services-page h1 { font-size: 2.2em; color: #fff; margin: 0; }
    .services-page h2 { color: #fff; margin: 0 0 0.5rem 0; }
    .services-page h4 { color: #ddd; margin: 1rem 0 0.5rem; }

    .flip-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        align-items: flex-start;
        margin-top: 1rem;
    }

    .flip {
        position: relative;
        display: inline-block;
        width: 320px;
        perspective: 1000px;
        margin-bottom: 1em;
    }

    .flip > .front,
    .flip > .back {
        transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275);
        transition-duration: 0.5s;
        transition-property: transform, opacity;
        color: white;
        background-size: cover !important;
        background-position: center !important;
        height: 220px;
        padding: 1em 2em;
        background: #313131;
        border-radius: 10px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.45);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .flip > .front { transform: rotateY(0deg); backface-visibility: hidden; }
    .flip > .back {
        position: absolute;
        opacity: 0;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transform: rotateY(-180deg);
        backface-visibility: hidden;
        padding: 1.25rem;
    }

    .flip:hover > .front { transform: rotateY(180deg); }
    .flip:hover > .back { opacity: 1; transform: rotateY(0deg); }

    /* vertical flip variant */
    .flip.flip-vertical > .back { transform: rotateX(-180deg); }
    .flip.flip-vertical:hover > .front { transform: rotateX(180deg); }
    .flip.flip-vertical:hover > .back { transform: rotateX(0deg); }

    .text-shadow {
        text-shadow:
            1px 1px rgba(0, 0, 0, 0.04),
            2px 2px rgba(0, 0, 0, 0.04),
            3px 3px rgba(0, 0, 0, 0.04),
            4px 4px rgba(0, 0, 0, 0.04),
            0.125rem 0.125rem rgba(0, 0, 0, 0.04),
            6px 6px rgba(0, 0, 0, 0.04),
            7px 7px rgba(0, 0, 0, 0.04),
            8px 8px rgba(0, 0, 0, 0.04),
            9px 9px rgba(0, 0, 0, 0.04),
            0.3125rem 0.3125rem rgba(0, 0, 0, 0.04),
            11px 11px rgba(0, 0, 0, 0.04),
            12px 12px rgba(0, 0, 0, 0.04),
            13px 13px rgba(0, 0, 0, 0.04),
            14px 14px rgba(0, 0, 0, 0.04),
            0.625rem 0.625rem rgba(0, 0, 0, 0.04),
            16px 16px rgba(0, 0, 0, 0.04),
            17px 17px rgba(0, 0, 0, 0.04),
            18px 18px rgba(0, 0, 0, 0.04),
            19px 19px rgba(0, 0, 0, 0.04),
            1.25rem 1.25rem rgba(0, 0, 0, 0.04);
    }

    .credit {
        display: inline-block;
        margin-top: 0.75rem;
        font-size: 8pt;
        text-decoration: none;
        color: #bbb;
    }

   
</style>

<div class="services-page" role="main" aria-labelledby="services-title">
