@page "/appointments/details"
@using Microsoft.EntityFrameworkCore
@using SpaFinal213.Components.Shared
@using SpaFinal213.Models
@inject IDbContextFactory<SpaFinal213.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<div class="centered-panel">
    <div class="panel-inner">
        <div class="panel-card" style="flex: 1 1 520px;">
            <h1>Details</h1>

            <section>
                <StatusMessage Message="@ErrorMessage" />

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="text-danger">@ErrorMessage</div>
                }
                else if (appointment is null)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    <h2>Appointment</h2>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Customer</dt>
                        <dd class="col-sm-10">@appointment.Customer_Id</dd>

                        <dt class="col-sm-2">Employee</dt>
                        <dd class="col-sm-10">@appointment.Employee_Id</dd>

                        <dt class="col-sm-2">Service</dt>
                        <dd class="col-sm-10">@appointment.Service_Id</dd>

                        <dt class="col-sm-2">Date</dt>
                        <dd class="col-sm-10">@appointment.Date.ToString("MMM d, yyyy")</dd>

                        <dt class="col-sm-2">Start</dt>
                        <dd class="col-sm-10">@appointment.Start.ToString("hh\\:mm tt")</dd>

                        <dt class="col-sm-2">Status</dt>
                        <dd class="col-sm-10">@appointment.Status</dd>

                        <dt class="col-sm-2">Notes</dt>
                        <dd class="col-sm-10">@appointment.Notes</dd>

                        <dt class="col-sm-2">Price</dt>
                        <dd class="col-sm-10">@appointment.Price.ToString("C")</dd>

                        <dt class="col-sm-2">Duration</dt>
                        <dd class="col-sm-10">@appointment.Duration @("min")</dd>
                    </dl>

                    <div class="mt-2">
                        <a class="btn btn-sm btn-secondary me-2" href="@($"/appointments/edit?appointment_id={appointment.Appointment_Id}")">Edit</a>
                        <a class="btn btn-sm btn-outline-secondary" href="/appointments">Back to List</a>
                    </div>
                }
            </section>
        </div>

        <div class="panel-card" style="flex: 0 0 320px;">
            <section>
                <h3>Quick links & help</h3>
                <hr />
                <p>
                    <a class="btn btn-sm btn-secondary mb-2" href="/appointments/create">Create Appointment</a>
                </p>
                <p>
                    <a class="btn btn-sm btn-secondary mb-2" href="/appointments">View Appointments</a>
                </p>
                <p>
                    <a class="btn btn-sm btn-outline-secondary" href="/appointments">Back to List</a>
                </p>
            </section>
        </div>
    </div>
</div>

@code {
    private string? ErrorMessage;
    private Appointment? appointment;

    [SupplyParameterFromQuery]
    private int Appointment_Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ErrorMessage = null;

        try
        {
            using var context = DbFactory.CreateDbContext();
            appointment = await context.Appointment.FirstOrDefaultAsync(m => m.Appointment_Id == Appointment_Id);

            if (appointment is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while loading the appointment details.";
            Console.Error.WriteLine(ex);
        }
    }
}
