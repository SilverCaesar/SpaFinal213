@page "/clientcustomercreate"
@using Microsoft.EntityFrameworkCore
@using SpaFinal213.Components.Shared
@using SpaFinal213.Models
@inject IDbContextFactory<SpaFinal213.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<div class="centered-panel">
    <div class="panel-inner">
        <div class="panel-card" style="flex: 1 1 520px;">
            <h1>Create</h1>

            <section>
                <StatusMessage Message="@ErrorMessage" />
                <EditForm Model="Customer" method="post" OnValidSubmit="AddCustomer" FormName="create" Enhance>
                    <DataAnnotationsValidator />
                    <h2>Customer</h2>
                    <hr />
                    <ValidationSummary class="text-danger" role="alert" />

                    <div class="mb-3">
                        <label for="fname" class="form-label">First name</label>
                        <InputText id="fname" @bind-Value="Customer.Fname" class="form-control" />
                        <ValidationMessage For="() => Customer.Fname" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label for="lname" class="form-label">Last name</label>
                        <InputText id="lname" @bind-Value="Customer.Lname" class="form-control" />
                        <ValidationMessage For="() => Customer.Lname" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <InputText id="notes" @bind-Value="Customer.Notes" class="form-control" />
                        <ValidationMessage For="() => Customer.Notes" class="text-danger" />
                    </div>

                    <div class="mt-2">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
                    </div>
                </EditForm>
            </section>
        </div>

        <div class="panel-card" style="flex: 0 0 320px;">
            <section>
                <h3>Quick links & help</h3>
                <hr />
                <p>
                    <a class="btn btn-sm btn-secondary mb-2" href="/appointments/create">Make an Appointment</a>
                </p>
                <p>
                    <a class="btn btn-sm btn-secondary mb-2" href="/customers">View Customers</a>
                </p>
                <p>
                    <a class="btn btn-sm btn-outline-secondary" href="/bookappointment">Back to Booking</a>
                </p>
            </section>
        </div>
    </div>
</div>

@code {
    private string? ErrorMessage;

    [SupplyParameterFromForm]
    private Customer Customer { get; set; } = default!;

    // Initialize the Customer model and default DateAccount to now
    protected override void OnInitialized() => Customer ??= new Customer { DateAccount = DateTime.Now };

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddCustomer()
    {
        ErrorMessage = null;

        // defensive: ensure DateAccount is set if the model was somehow null/default
        if (Customer == null)
        {
            Customer = new Customer { DateAccount = DateTime.Now };
        }
        else if (Customer.DateAccount == default)
        {
            Customer.DateAccount = DateTime.Now;
        }

        try
        {
            using var context = DbFactory.CreateDbContext();
            context.Customer.Add(Customer);
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/bookappointment");
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while creating the customer.";
            Console.Error.WriteLine(ex);
        }
    }
}
