@page "/"

<PageTitle>Home</PageTitle>

<div class="hero-section">
    <div class="hero-bg" aria-hidden="true"></div>

    <div class="hero-center">
        <div class="hero-cards">
            <!-- Left card -->
            <div class="hero-card-inner">
                <h2>Schedule Your Spa Day</h2>
                <p>
                    Relax, refresh, and rejuvenate. Log in or contact us at
                    <strong>(701) 867-5309</strong> to book your spa experience.
                </p>
                <a class="btn btn-outline-dark" href="/Account/Login">Login to Book</a>
            </div>

            <!-- Right card -->
            <div class="hero-card-inner">
                <h3>Our Services</h3>
                <ul>
                    <li>Massage Therapy</li>
                    <li>Facials</li>
                    <li>Body Treatments</li>
                    <li>Nail Services</li>
