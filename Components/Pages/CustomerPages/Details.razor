@page "/customers/details"
@using Microsoft.EntityFrameworkCore
@using SpaFinal213.Models
@inject IDbContextFactory<SpaFinal213.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Customer</h2>
    <hr />
    @if (customer is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ApplicationUserId</dt>
            <dd class="col-sm-10">@customer.ApplicationUserId</dd>
            <dt class="col-sm-2">Fname</dt>
            <dd class="col-sm-10">@customer.Fname</dd>
            <dt class="col-sm-2">Lname</dt>
            <dd class="col-sm-10">@customer.Lname</dd>
            <dt class="col-sm-2">Notes</dt>
            <dd class="col-sm-10">@customer.Notes</dd>
            <dt class="col-sm-2">DateAccount</dt>
            <dd class="col-sm-10">@customer.DateAccount</dd>
        </dl>
        <div>
            <a href="@($"/customers/edit?customer_id={customer.Customer_Id}")">Edit</a> |
            <a href="@($"/customers")">Back to List</a>
        </div>
    }
</div>

@code {
    private Customer? customer;

    [SupplyParameterFromQuery]
    private int Customer_Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        customer = await context.Customer.FirstOrDefaultAsync(m => m.Customer_Id == Customer_Id);

        if (customer is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
