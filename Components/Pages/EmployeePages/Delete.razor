@page "/employees/delete"
@using Microsoft.EntityFrameworkCore
@using SpaFinal213.Components.Shared
@using SpaFinal213.Models
@inject IDbContextFactory<SpaFinal213.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<div class="centered-panel">
    <div class="panel-inner">
        <div class="panel-card" style="flex: 1 1 520px;">
            <h1>Delete</h1>

            <section>
                
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="text-danger">@ErrorMessage</div>
                }
                else if (employee is null)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    <h2>Employee</h2>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Application User Id</dt>
                        <dd class="col-sm-9">@employee.ApplicationUserId</dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@($"{employee.FName} {employee.LName}")</dd>

                        <dt class="col-sm-3">Employee Type</dt>
                        <dd class="col-sm-9">@employee.EmployeeType</dd>

                        <dt class="col-sm-3">Specialization</dt>
                        <dd class="col-sm-9">@employee.Specialization?.Name ?? </dd>
                    </dl>

                    <EditForm Model="employee" OnValidSubmit="DeleteEmployee" FormName="delete" method="post" Enhance>
                        <div class="mb-2">
                            <button type="submit" class="w-100 btn btn-lg btn-danger" disabled="@(employee is null)">Delete</button>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-outline-secondary" href="/employees">Cancel</a>
                        </div>
                    </EditForm>
                }
            </section>
        </div>

        <div class="panel-card" style="flex: 0 0 320px;">
            <section>
                <h3>Quick links & help</h3>
                <hr />
                <p><a class="btn btn-sm btn-secondary mb-2" href="/employees/create">Create Employee</a></p>
                <p><a class="btn btn-sm btn-secondary mb-2" href="/employees">View Employees</a></p>
                <p><a class="btn btn-sm btn-outline-secondary" href="/employees">Back to List</a></p>
            </section>
        </div>
    </div>
</div>

@code {
    private string? ErrorMessage;
    private Employee? employee;

    [SupplyParameterFromQuery]
    private int EmployeeId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ErrorMessage = null;

        try
        {
            using var context = DbFactory.CreateDbContext();
            employee = await context.Employee
                                    .Include(e => e.Specialization)
                                    .FirstOrDefaultAsync(m => m.EmployeeId == EmployeeId);

            if (employee is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while loading the employee.";
            Console.Error.WriteLine(ex);
        }
    }

    private async Task DeleteEmployee()
    {
        ErrorMessage = null;

        if (employee is null)
        {
            ErrorMessage = "Employee not found.";
            return;
        }

        try
        {
            using var context = DbFactory.CreateDbContext();
            // Attach if necessary, then remove
            context.Employee.Attach(employee);
            context.Employee.Remove(employee);
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/employees");
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while deleting the employee.";
            Console.Error.WriteLine(ex);
        }
    }
}
