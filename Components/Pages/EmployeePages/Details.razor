@page "/employees/details"
@using Microsoft.EntityFrameworkCore
@using SpaFinal213.Components.Shared
@using SpaFinal213.Models
@inject IDbContextFactory<SpaFinal213.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<div class="centered-panel">
    <div class="panel-inner">
        <div class="panel-card" style="flex: 1 1 520px;">
            <h1>Details</h1>

            <section>
                <StatusMessage Message="@ErrorMessage" />

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="text-danger">@ErrorMessage</div>
                }
                else if (employee is null)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    <h2>Employee</h2>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Name</dt>
                        <dd class="col-sm-10">@($"{employee.FName} {employee.LName}")</dd>

                        <dt class="col-sm-2">Type</dt>
                        <dd class="col-sm-10">@employee.EmployeeType</dd>
                    </dl>

                    <div class="mt-2">
                        <a class="btn btn-sm btn-secondary me-2" href="@($"/employees/edit?employeeid={employee.EmployeeId}")">Edit</a>
                        <a class="btn btn-sm btn-outline-secondary" href="/employees">Back to List</a>
                    </div>
                }
            </section>
        </div>

        <div class="panel-card" style="flex: 0 0 320px;">
            <section>
                <h3>Quick links & help</h3>
                <hr />
                <p><a class="btn btn-sm btn-secondary mb-2" href="/employees/create">Create Employee</a></p>
                <p><a class="btn btn-sm btn-secondary mb-2" href="/employees">View Employees</a></p>
                <p><a class="btn btn-sm btn-outline-secondary" href="/employees">Back to List</a></p>
            </section>
        </div>
    </div>
</div>

@code {
    private string? ErrorMessage;
    private Employee? employee;

    [SupplyParameterFromQuery]
    private int EmployeeId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ErrorMessage = null;
        try
        {
            using var context = DbFactory.CreateDbContext();
            employee = await context.Employee.FirstOrDefaultAsync(e => e.EmployeeId == EmployeeId);

            if (employee is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "An error occurred while loading the employee details.";
            Console.Error.WriteLine(ex);
        }
    }
}
