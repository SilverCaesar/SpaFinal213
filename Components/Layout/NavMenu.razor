@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg navbar-transparent">
    <div class="container-fluid d-flex align-items-center">

        <!-- Brand -->
        <a class="navbar-brand"
           href="/"
           style="font-family:'Old English Text MT'; font-size: 32pt; color: white">
            SpaFinal213
        </a>


        <!-- Left Links -->
        <div class="d-flex ms-4 align-items-center flex-grow-1" 
            style="font-family: Monaco, Menlo, Consolas, 'Courier New', monospace; font-size:20px;">
            <NavLink class="nav-link text-light me-5 fw-bold" href="/">Home</NavLink>
            <NavLink class="nav-link text-light me-5 fw-bold" href="/OldServices">Services</NavLink>
            <NavLink class="nav-link text-light me-5 fw-bold" href="#">Reviews</NavLink>
            <NavLink class="nav-link text-light me-5 fw-bold" href="/book-appointment">Book Now!</NavLink>
            <!--<NavLink class="nav-link text-light me-5 fw-bold" href="/customerAppointment">Book Appointment</NavLink>-->
            <AuthorizeView>
                <Authorized>
                    <NavLink class="nav-link text-light me-5 fw-bold" href="/appointments">Appointments</NavLink>
                    <NavLink class="nav-link text-light me-5 fw-bold" href="/employees">Employees</NavLink>
                    <NavLink class="nav-link text-light me-5 fw-bold" href="/services">Services</NavLink>
                    <NavLink class="nav-link text-light me-5 fw-bold" href="/customers">Customers</NavLink>
                </Authorized>
            </AuthorizeView>
        </div>


        <!-- Right Auth Buttons -->
        <div class="d-flex align-items-center gap-2">
            <AuthorizeView>
                <Authorized>
                    <!-- Match font/spacing of left links when user is logged in -->
                    <NavLink class="nav-link text-light me-5 fw-bold"
                             style="font-family: Monaco, Menlo, Consolas, 'Courier New', monospace; font-size:20px;"
                             href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>

                    <form action="Account/Logout" method="post" class="d-inline">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit"
                                class="nav-link text-light me-5 fw-bold"
                                style="font-family: Monaco, Menlo, Consolas, 'Courier New', monospace; font-size:20px; background:none; border:none; padding:0;">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <!-- Render Register/Login with same font sizing as left links -->
                    <NavLink class="nav-link text-light me-5 fw-bold"
                             style="font-family: Monaco, Menlo, Consolas, 'Courier New', monospace; font-size:20px;"
                             href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                    <NavLink class="nav-link text-light me-5 fw-bold"
                             style="font-family: Monaco, Menlo, Consolas, 'Courier New', monospace; font-size:20px;"
                             href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>

    </div>
</nav>


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}